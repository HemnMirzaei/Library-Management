@model Library.Core.ViewModels.LoginUserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="topicHeader">Enter the user id</h1>
<hr />
<div class="row">
    <div class="mainForm">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control text" placeholder="User Id"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Go To User" class="btns btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>


