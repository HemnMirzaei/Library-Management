@model IEnumerable<Library.Data.Entities.Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<a class = "topButton btn btn-primary" asp-action="Create">New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int counting = 0;
        }
        @foreach(var item in Model)
        {
            counting++;
            <tr>
                <td>@counting</td>
                <td>@item.Name</td>
                <td>
                    @Html.ActionLink("View","Detail","Book",new{id = @item.Id},new {@class = "buttons btn btn-primary"})
                    @Html.ActionLink("Edit","Edit","Book",new{id = @item.Id},new {@class = "buttons btn btn-success"})

                    @Html.ActionLink("Delete","Delete","Book",new{id = @item.Id},new {@class = "buttons btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>


